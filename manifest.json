{
  "name": "PWA Manifest Override",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Overrides PWA manifest to enable tabbed mode.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*", "https://add.your.sites/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://add.your.sites/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
